<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        tools:context=".MainActivity" >
    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/buttonContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        tools:context=".MainActivity"
        android:background="@drawable/palette">
          
        
       

        
        <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/erase_button" />
        
 		<View
     	android:id="@+id/red_orange_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="90dp"
    	android:background="@drawable/red_orange_button"/>
 		
 		<View
     	android:id="@+id/red_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="40dp"
    	android:layout_marginTop="40dp"
    	android:background="@drawable/red_button"/>
 		
 		<View
     	android:id="@+id/red_violet_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="90dp"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/red_button"/>
 		 		
 		<View
     	android:id="@+id/violet_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="150dp"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/red_button"/>
 		 		 		
 		<View
     	android:id="@+id/blue_violet_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="200dp"
    	android:layout_marginTop="40dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		
 		<View
     	android:id="@+id/blue_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="230dp"
    	android:layout_marginTop="90dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		
 		<View
     	android:id="@+id/blue_green_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="230dp"
    	android:layout_marginTop="150dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		 		
 		<View
     	android:id="@+id/green_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="200dp"
    	android:layout_marginTop="200dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		 		 		
 		<View
     	android:id="@+id/yellow_green_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="150dp"
    	android:layout_marginTop="230dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		 		 		 		
 		<View
     	android:id="@+id/yellow_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="90dp"
    	android:layout_marginTop="230dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		 		 		 		 		
 		<View
     	android:id="@+id/yellow_orange_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="40dp"
    	android:layout_marginTop="200dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		 		 		 		 		 		
 		<View
     	android:id="@+id/orange_button" 
     	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="150dp"
    	android:background="@drawable/red_button"/>
 		 		 		 		 		 		 		 		 		 		 		


    </FrameLayout>
    
    
    
    <FrameLayout
        android:layout_width="100dp"
    	android:layout_height="100dp"
        android:id="@+id/pie" >
        

        
        </FrameLayout>
    
    
    
    </LinearLayout>

</LinearLayout>